{% extends 'base.html.twig' %}

{% block title %}Hello Projet2Controller!
{% endblock %}

{% block body %}

	<div>
		<style>
			.accueil {
				background-image: url('https://photo-voiture.motorlegend.com/high/lotus-elise-serie-2-1-8-220-130016.jpg');
				background-repeat: no-repeat;
				background-attachment: fixed;
				background-size: 100% 80%;
				height: 500px;
				text-align: center;

			}
			.card {
				text-align: center;
			}
